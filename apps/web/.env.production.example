# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# DO NOT COMMIT THIS FILE TO GIT!
# Store these securely in your deployment platform

# ===========================================
# SUPABASE CONFIGURATION (Required)
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_KEY=your_production_service_role_key_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NEXT_PUBLIC_APP_URL=https://routehub.geosafety.ge
NODE_ENV=production

# ===========================================
# MAP PROVIDER
# ===========================================
NEXT_PUBLIC_MAP_PROVIDER=openstreetmap
# If using Mapbox in production:
# NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your_production_mapbox_token

# ===========================================
# ERROR TRACKING (Strongly Recommended)
# ===========================================
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=geosafety
SENTRY_PROJECT=routehub

# ===========================================
# ANALYTICS (Recommended)
# ===========================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# Or Vercel Analytics:
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id

# ===========================================
# SECURITY
# ===========================================
SESSION_SECRET=generate_a_random_64_character_string_here
NEXTAUTH_URL=https://routehub.geosafety.ge
NEXTAUTH_SECRET=generate_another_random_64_character_string

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_LOGGING=false

# ===========================================
# EMAIL (Future)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=notifications@geosafety.ge
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=GeoSafety RouteHub <notifications@geosafety.ge>